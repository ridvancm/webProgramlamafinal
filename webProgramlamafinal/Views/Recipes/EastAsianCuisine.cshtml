@model List<webProgramlamafinal.Models.Recipe>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uzak Doğu Mutfağı Tarifleri</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            margin: 0;
            font-family: Arial, sans-serif;
            padding: 20px;
            margin: 0;
            background-image: url(https://images.pexels.com/photos/6646360/pexels-photo-6646360.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .container {
            display: flex;
            justify-content: space-between;
        }

        .recipe-list {
            width: 45%;
            padding: 10px;
            border: 1px solid #ccc;
            background-color: rgba(255, 255, 255, 0.8); /* Saydamlık eklendi */
            border-radius: 8px; /* Köşeleri yuvarlat */
        }

        .recipe-card {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: rgba(255, 255, 255, 0.9); /* Saydamlık eklendi */
            border-radius: 8px; /* Köşeleri yuvarlat */
        }

        .recipe-actions a, .recipe-actions form {
            display: inline-block;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>Uzak Doğu Mutfağı</h1>

    <div class="container">
        <div class="recipe-list">
            <h2>Mevcut Tarifler</h2>
            @if (Model != null && Model.Any())
            {
                foreach (var recipe in Model)
                {
                    <div class="recipe-card">
                        <h3>@recipe.Name</h3>
                        <p><strong>Malzemeler:</strong> @recipe.Ingredients</p>
                        <p><strong>Yapılışı:</strong> @recipe.Instructions</p>
                        <div class="recipe-actions">
                            <a href="/Recipes/Edit/@recipe.Id">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@recipe.Id" method="post" onsubmit="return confirm('Bu tarifi silmek istediğinize emin misiniz?');">
                                <button type="submit">Sil</button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Henüz tarif eklenmemiş.</p>
            }
        </div>
        <div class="recipe-list">
            <h2>Yeni Tarifler</h2>
            <a href="/Recipes/Add">Yeni Tarif Ekle</a>
        </div>
    </div>
</body>
</html>
